<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:paddingBottom="16dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarCustomIconColor"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_rollnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:inputType="number"
        android:layout_marginBottom="@dimen/double_standard_margin"
        android:hint="@string/string_roll_number"
        android:singleLine="true"
        android:textSize="18dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/string_roll_number" />
    <TextView
        android:layout_width="fill_parent"

        android:text="@string/string_choose_cs_ct"

        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"

        style="@style/GLOBAL_TEXTVIEW"

        android:layout_height="30dp" />
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_CT_CS"
        android:layout_marginTop="@dimen/double_standard_margin"
        android:layout_marginBottom="@dimen/double_standard_margin"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="fill_parent"

        android:text="@string/string_choose_year"

        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"

        style="@style/GLOBAL_TEXTVIEW"

        android:layout_height="30dp" />
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_year"
        android:layout_marginTop="@dimen/double_standard_margin"
        android:layout_marginBottom="@dimen/double_standard_margin"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:text="External ?"
        android:id="@+id/is_external"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/double_standard_margin"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="fill_parent"
        android:background="@color/main_blue"
        android:id="@+id/btn_search"
        android:text="Search"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        style="@style/QUESTION_TEXTVIEW"

        android:layout_height="55dp" />


    <!--app:fontPath="fonts/Roboto-Light.ttf"-->
</LinearLayout>
    </ScrollView>